{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "es2021"],
    "module": "CommonJS",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ES2019"
  }
}
