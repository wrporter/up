{
  "name": "@wesp-up/checkit-app",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "ignore:build": "cross-env NODE_ENV=production run-s clean build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:server": "esbuild `find server \\( -name '*.ts' \\)` --platform=node --sourcemap --format=cjs --log-level=warning --outdir=build --tsconfig=server/tsconfig.json",
    "ignore:ci": "run-p lint typecheck test:coverage build",
    "ignore:clean": "rm -rf logs coverage build public/build app/styles/tailwind.css",
    "ignore:dev": "run-s clean && run-s build:css build:remix && run-p dev:*",
    "dev:css": "cross-env NODE_ENV=development npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development REMIX_DEV_SERVER_WS_PORT=8002 remix watch",
    "dev:server": "cross-env NODE_ENV=development SESSION_SECRET=abc123 nodemon --watch server -e ts --ignore '*.test.ts' --exec 'npm run build:server && node --require dotenv/config ./build/server.js'",
    "docker:build": "cd ../.. && SCOPE=@wesp-up/checkit-app APP_NAME=checkit-app .ci/app/build.sh",
    "docker:deploy": "cd ../.. && APP_NAME=checkit-app WORKSPACE_PATH=apps/checkit-app REMOTE_APP_DIRECTORY=checkit .ci/app/deploy.sh",
    "docker:run": "cd ../.. && APP_NAME=checkit-app .ci/app/run.sh yarn workspace @wesp-up/checkit-app start",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "ignore:lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "ignore:lint:fix": "npm run lint -- --fix",
    "start": "cross-env NODE_ENV=production node --require dotenv/config ./build/server.js",
    "ignore:test": "vitest run",
    "ignore:test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "ignore:typecheck": "tsc -b"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@remix-run/express": "^1.17.1",
    "@remix-run/node": "^1.17.1",
    "@remix-run/react": "^1.17.1",
    "@remix-run/serve": "^1.17.1",
    "@wesp-up/ui": "*",
    "bcryptjs": "^2.4.3",
    "classnames": "^2.3.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "express-prom-bundle": "^6.6.0",
    "mongodb": "^5.6.0",
    "morgan": "^1.10.0",
    "prom-client": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.4.0",
    "remix-auth-form": "^1.3.0",
    "remix-auth-google": "^1.2.0",
    "rotating-file-stream": "^3.1.0",
    "tiny-invariant": "^1.3.1",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.17.1",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "@types/uuid": "^9.0.2",
    "@vitejs/plugin-react": "^4.0.0",
    "@wesp-up/eslint-config-remix": "*",
    "@wesp-up/tsconfig": "*",
    "autoprefixer": "^10.4.14",
    "binode": "^1.0.5",
    "c8": "^8.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.18.4",
    "eslint": "^8.43.0",
    "happy-dom": "^9.20.3",
    "msw": "^1.2.2",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.2"
  }
}
