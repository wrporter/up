{
  "name": "@wesp-up/commit-app",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production run-p build:*",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --sourcemap --format=cjs --log-level=warning --outdir=build --tsconfig=server/tsconfig.json ./server/server.ts",
    "ci": "run-p lint typecheck test:coverage build",
    "clean": "rm -rf logs coverage build public/build app/styles/tailwind.css",
    "dev": "run-p dev:*",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:server": "cross-env NODE_ENV=development node --inspect --require dotenv/config ./build/server.js",
    "docker:build": "cd ../.. && SCOPE=@wesp-up/commit-app APP_NAME=commit-app .ci/app/build.sh",
    "docker:deploy": "cd ../.. && APP_NAME=commit-app WORKSPACE_PATH=apps/commit-app REMOTE_APP_DIRECTORY=commit .ci/app/deploy.sh",
    "docker:run": "cd ../.. && APP_NAME=commit-app .ci/app/run.sh yarn workspace @wesp-up/commit-app start",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "npm run lint -- --fix",
    "run": "node -r esbuild-runner/register -r dotenv/config",
    "start": "cross-env NODE_ENV=production node --require dotenv/config ./build/server.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-icons": "^1.3.0",
    "@remix-run/css-bundle": "1.17.1",
    "@remix-run/express": "1.17.1",
    "@remix-run/node": "1.17.1",
    "@remix-run/react": "1.17.1",
    "@remix-run/server-runtime": "1.17.1",
    "@wesp-up/express-remix": "*",
    "@wesp-up/ui": "*",
    "bcryptjs": "^2.4.3",
    "cross-env": "7.0.3",
    "dotenv": "^16.3.0",
    "express": "4.18.2",
    "isbot": "3.6.10",
    "mongodb": "^5.6.0",
    "prom-client": "14.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remix-auth": "^3.4.0",
    "remix-auth-form": "^1.3.0",
    "remix-auth-google": "^1.2.0",
    "tailwind-merge": "^1.13.2",
    "tailwind-variants": "^0.1.8",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "1.17.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "4.17.17",
    "@types/node": "20.3.1",
    "@types/react": "18.2.12",
    "@types/react-dom": "18.2.5",
    "@vitejs/plugin-react": "4.0.0",
    "@vitest/coverage-v8": "0.32.2",
    "@wesp-up/eslint-config-remix": "*",
    "@wesp-up/tsconfig": "*",
    "autoprefixer": "^10.4.14",
    "esbuild": "0.18.4",
    "eslint": "8.43.0",
    "happy-dom": "9.20.3",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.24",
    "prettier": "2.8.8",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.3",
    "vite": "4.3.9",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "^0.32.2"
  }
}
