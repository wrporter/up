{
  "name": "commit-app",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production run-p build:*",
    "build:database": "prisma generate",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --sourcemap --format=cjs --log-level=warning --outdir=build --tsconfig=server/tsconfig.json ./server/main.ts",
    "ci": "run-p lint typecheck test:coverage build",
    "clean": "rm -rf logs coverage build public/build app/styles/tailwind.css",
    "db:update": "prisma db push && prisma generate",
    "dev": "run-p dev:*",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:remix": "remix dev --manual -c \"node --inspect --require dotenv/config ./build/main.js\"",
    "docker:build": "cd ../.. && SCOPE=@wesp-up/commit-app APP_NAME=commit-app .ci/app/build.sh",
    "docker:deploy": "cd ../.. && APP_NAME=commit-app WORKSPACE_PATH=apps/commit-app REMOTE_APP_DIRECTORY=commit .ci/app/deploy.sh",
    "docker:run": "cd ../.. && APP_NAME=commit-app .ci/app/run.sh yarn workspace @wesp-up/commit-app start",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "npm run lint -- --fix",
    "run": "node -r esbuild-runner/register -r dotenv/config",
    "start": "cross-env NODE_ENV=production node --require dotenv/config ./build/main.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@prisma/client": "^5.6.0",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-icons": "^1.3.0",
    "@remix-run/css-bundle": "2.3.1",
    "@remix-run/express": "2.3.1",
    "@remix-run/node": "2.3.1",
    "@remix-run/react": "2.3.1",
    "@remix-run/server-runtime": "2.3.1",
    "@remix-validated-form/with-zod": "^2.0.7",
    "@wesp-up/express-remix": "*",
    "@wesp-up/ui": "*",
    "bcryptjs": "^2.4.3",
    "cross-env": "7.0.3",
    "dotenv": "^16.3.1",
    "envalid": "^8.0.0",
    "express": "4.18.2",
    "flowbite": "^2.2.0",
    "flowbite-react": "^0.7.0",
    "isbot": "3.7.1",
    "mongodb": "^6.3.0",
    "nanoid": "^5.0.3",
    "node-emoji": "^2.1.3",
    "prom-client": "15.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remix-auth": "^3.6.0",
    "remix-auth-form": "^1.4.0",
    "remix-auth-google": "^2.0.0",
    "remix-validated-form": "^5.1.5",
    "source-map-support": "^0.5.21",
    "tailwind-merge": "^2.0.0",
    "tailwind-variants": "^0.1.18",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.22.4",
    "zod-form-data": "^2.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "2.3.1",
    "@testing-library/jest-dom": "6.1.4",
    "@testing-library/react": "14.1.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "4.17.21",
    "@types/node": "20.10.0",
    "@types/react": "18.2.38",
    "@types/react-dom": "18.2.17",
    "@vitejs/plugin-react": "4.2.0",
    "@vitest/coverage-v8": "0.34.6",
    "@wesp-up/eslint-config-react": "*",
    "@wesp-up/tsconfig": "*",
    "autoprefixer": "^10.4.16",
    "esbuild": "0.19.7",
    "eslint": "8.54.0",
    "happy-dom": "12.10.3",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.31",
    "prettier": "3.1.0",
    "prisma": "^5.6.0",
    "tailwindcss": "3.3.5",
    "typescript": "5.3.2",
    "vite": "5.0.2",
    "vite-tsconfig-paths": "4.2.1",
    "vitest": "^0.34.6"
  }
}
